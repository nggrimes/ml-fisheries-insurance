   keywords = {Agriculture,Credit,Developing countries,Index-insurance,Smallholder farmers},
   pages = {94-118},
   title = {Adoption and impact of index-insurance and credit for smallholder farmers in developing countries: A systematic review},
   volume = {76},
   year = {2016},
}
@book{Harrison2022,
