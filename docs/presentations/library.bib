@article{Goodwin2014,
   abstract = {The federal crop insurance program has been a major fixture of U.S. agricultural policy since the 1930s, and continues to grow in size and importance. Indeed, it now represents the most prominent farm policy instrument, accounting for more government spending than any other farm commodity program. The 2014 Farm Bill further expanded the crop insurance program and introduced a number of new county-level revenue insurance plans. In 2013, over $123 billion in crop value was insured under the program. Crop revenue insurance, first introduced in the 1990s, now accounts for nearly 70% of the total liability in the program. The available plans cover losses that result from a revenue shortfall that can be triggered by multiple, dependent sources of risk-either low prices, low yields, or a combination of both. The actuarial practices currently applied when rating these plans essentially involve the application of a Gaussian copula model to the pricing of dependent risks. We evaluate the suitability of this assumption by considering a number of alternative copula models. In particular, we use combinations of pair-wise copulas of conditional distributions to model multiple sources of risk. We find that this approach is generally preferred by model-fitting criteria in the applications considered here. We demonstrate that alternative approaches to modeling dependencies in a portfolio of risks may have significant implications for premium rates in crop insurance.},
   author = {Barry K Goodwin and Ashley Hungerford},
   doi = {10.1093/ajae/aau086},
   keywords = {Copula models,Q14,crop insurance,systemic risk JEL codes: G22},
   title = {COPULA-BASED MODELS OF SYSTEMIC RISK IN U.S. AGRICULTURE: IMPLICATIONS FOR CROP INSURANCE AND REINSURANCE CONTRACTS},
   year = {2014},
}
@unpublished{frank2022,
   abstract = {The purpose of the 1973 Endangered Species Act (ESA) is to prevent the extinction of species by preserving the habitats on which they depend. However, the restrictions placed by the statutory protections awarded by the Act create incentives for landowners to preemptively develop their lands, before the statutory protections apply, so they can avoid the potentially high compliance costs. Currently, over 80% of all land in the United States is regulated by the ESA on account of at least one species. We study, at a nationwide scale, how the protections on habitats under the Act drive preemptive development, which goes in the exact opposite direction of the Act's intended goal. We overcome challenges faced by previous work on the effects of land-use policies, namely measurement and inference, through leveraging a new satellite data product, along with machine learning methods. Our preliminary findings manage to replicate a known case study in the literature-the pygmy owl-but we fail to detect sizable changes in land development in California. Future versions will extend the analysis to cover more known case studies, additional states, and more land-use categories.},
   author = {Sushant Banjara and Eyal Frank and Anouch Missirian},
   title = {Land-Use Restrictions and Perverse Incentives: Using Machine Learning to Evaluate the Endangered Species Act from High-Frequency Satellite Data},
   year = {2022},
}
@article{Birkenbach2020,
   abstract = {Fishers face multidimensional decisions: when to fish, what species to target, and how much gear to deploy. Most bioeconomic models assume single-species fisheries with perfectly elastic demand and focus on inter-seasonal dynamics. In real-world fisheries, vessels hold quotas for multiple species with heterogeneous biological and/or market conditions that vary intra-seasonally. We analyze within-season behavior in multispecies fisheries with individual fishing quotas, accounting for stock aggregations, capacity constraints, and downward-sloping demand. Numerical results demonstrate variation in harvest patterns. We specifically find: (1) harvests for species with downward-sloping demand tend to spread out; (2) spreading harvest of a high-value species can cause lower-value species to be harvested earlier in the season; and (3) harvest can be unresponsive or even respond negatively to biological aggregation when fishers balance incentives in multispecies settings. We test these using panel data from the Norwegian multispecies groundfish fishery and find evidence for all three. We extend the numerical model to account for transitions to management with individual fishing quotas in multispecies fisheries. We show that, under some circumstances, fishing seasons could contract or spread out.},
   author = {Anna M Birkenbach and Andreea L Cojocaru and · Frank Asche and Atle G Guttormsen and Martin D Smith},
   doi = {10.1007/s10640-020-00402-7},
   isbn = {0123456789},
   journal = {Environmental and Resource Economics},
   keywords = {Catch shares,Fishing behavior,Multi-fishery,Multispecies fishery,Seafood demand,Seasonal harvest,Sequential fishery},
   title = {Seasonal Harvest Patterns in Multispecies Fisheries},
   volume = {75},
