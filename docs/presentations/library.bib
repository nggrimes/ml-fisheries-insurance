}
@misc{Ludwig1979,
   abstract = {The effect of noise upon optimal harvesting strategies is considered. Whereas deterministic optimal strategies are based upon local considerations, the stochastic strategies must account for global effects. Perturbation methods are applied to obtain approximate solutions to the resulting boundary value problems, for small amounts of noise. Three problems are considered: (1) a single switching point (optimal escapement level), (2) three switching points, and (3) a switching point near a zero of the net growth rate. Approximate formulas are found for the perturbation of the optimal switching points. Qualitative results and interpretations are also provided. 1o Introduction. Economic and biological aspects of resource management have been considered by Clark (1976). A number of Clark's models have simple solutions, which have important practical implications. However, Clark has considered only deterministic models. The present work uses perturbation methods to explore the effects of small amounts of noise upon the optimal harvesting strategy. Generally speaking, the deterministic optimal strategy is obtained by local considerations. For example, the optimal switching point (see Clark (1976, p. 40)) is given by the zero or zeros of an expression which involves only the growth rate of the population, the net revenue per unit of harvest, and the discount rate. As long as certain inequalities are satisfied, the size of the constraints upon the harvest rate or effort play no role in the determination of the optimal population size. Likewise, the behavior of the population growth rate or the net revenue away from the optimal population size have no effect upon the location of the optimum size. In contrast, when stochastic fluctuations are present, the system will eventually explore large regions of the state space, regardless of which harvesting strategy is employed. Therefore the optimal strategy must involve global considerations. Mathematically , the steady solution of the control problem involves the solution of a boundary value problem. Explicit solutions of such problems can be found only in exceptional circumstances. However, perturbation methods can yield qualitative information, and often they provide accurate approximations. The present work applies perturbation methods to a sequence of three problems, of increasing complexity. Numerical results are obtained for some similar problems in part II of this work (Ludwig and Varah (1979)). The deterministic model is formulated in 2 following Clark (1976). Emphasis is placed upon the discounted present value of the resource, and the Hamilton-Jacobi equation which it satisfies. This approach carries over directly to the stochastic model, which is formulated in 3. The fluctuations in the exploited population are assumed to be due to multiplicative log-normal noise. When the logarithm of the population size is chosen as a new variable, then the Hamilton-Jacobi equation is replaced by a simple diffusion equation. The deterministic theory for a single switching point is developed in 4. This corresponds to the simplest case, where the optimal strategy consists in stabilizing the population at a certain size y*. The corresponding stochastic theory is given in 5. The expected discounted present value is expanded in a formal series, which involves *},
   author = {Donald Ludwig},
   issue = {1},
   journal = {SIAM J. APPL. MATH},
   title = {OPTIMAL HARVESTING OF A RANDOMLY FLUCTUATING RESOURCE. I: APPLICATION OF PERTURBATION METHODS*},
   volume = {37},
   url = {https://epubs.siam.org/terms-privacy},
   year = {1979},
}
@article{Bradley2019,
   abstract = {Fishery-dependent data are integral to sustainable fisheries management. A paucity of fishery data leads to uncertainty about stock status, which may compromise and threaten the economic and food security of the users dependent upon that stock and increase the chances of overfishing. Recent developments in the technology available to collect, manage and analyse fishery-relevant data provide a suite of possible solutions to update and modernize fisheries data systems and greatly expand data collection and analysis. Yet, despite the proliferation of relevant consumer technology, integration of technologically advanced data systems into fisheries management remains the exception rather than the rule. In this study, we describe the current status, challenges and future directions of high-tech data systems in fisheries management in order to understand what has limited their adoption. By reviewing the application of fishery-dependent data technology in multiple fisheries sectors globally, we show that innovation is stagnating as a result of lack of trust and cooperation between fishers and managers. We propose a solution based on a transdisciplinary approach to fishery management that emphasizes the need for collaborative problem-solving among stakeholders. In our proposed system, data feedbacks are a key component to effective fishery data systems, ensuring that fishers and managers collect, have access to and benefit from fisheries data as they work towards a mutually agreed-upon goal. A new approach to fisheries data systems will promote innovation to increase data coverage, accuracy and resolution, while reducing costs and allowing adaptive, responsive, near real-time management decision-making to improve fisheries outcomes.},
   author = {Darcy Bradley and Matt Merrifield and Karly M. Miller and Serena Lomonico and Jono R. Wilson and Mary G. Gleason},
