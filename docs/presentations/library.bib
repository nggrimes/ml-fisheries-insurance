   title = {Reflections on the success of traditional fisheries management},
   volume = {71},
   year = {2014},
}
@inproceedings{Ruszczynski2010,
   abstract = {We introduce the concept of a Markov risk measure and we use it to formulate risk-averse control problems for two Markov decision models: a finite horizon model and a discounted infinite horizon model. For both models we derive risk-averse dynamic programming equations and a value iteration method. For the infinite horizon problem we develop a risk-averse policy iteration method and we prove its convergence. We also propose a version of the Newton method to solve a nonsmooth equation arising in the policy iteration method and we prove its global convergence. Finally, we discuss relations to min-max Markov decision models. © 2010 Springer and Mathematical Optimization Society.},
