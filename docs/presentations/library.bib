   issue = {5},
   journal = {Conservation Biology},
   keywords = {behavior change campaigns, fisheries management, impact evaluation, monitoring and evaluation, perceptions data,campañas de cambio de comportamiento,datos de percepción,evaluación de impacto,manejo de pesquerías,mercadotecnia social,monitoreo y evaluación,pesquerías a pequeña escala,reserva TURF,small-scale fisheries,social marketing, TURF reserve},
